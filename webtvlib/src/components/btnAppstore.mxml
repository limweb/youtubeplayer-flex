<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:d="http://ns.adobe.com/fxg/2008/dt"
		width="100" height="34">
	<fx:Metadata>[HostComponent("spark.components.Button")]</fx:Metadata>
	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
	</s:states>
	<s:BitmapImage d:userLabel="app store" x="1" y="0" smooth="true"
				   source="@Embed('/assets/images/webtv/app store.png')"
				   alpha.up="1">
		<s:filters>
			<s:GlowFilter includeIn="down" alpha="1.0" blurX="6" blurY="6" color="#5380d0"
						  inner="false" knockout="false" quality="2" strength="2"/>
		</s:filters>
	</s:BitmapImage>
	<s:Rect includeIn="disabled,up" x="0" y="0" width="100" height="34"
			alpha.disabled="0.6"
			alpha.up="0.4">
		<s:fill>
			<s:SolidColor color="#CCCCCC"/>
		</s:fill>
	</s:Rect>
</s:Skin>
